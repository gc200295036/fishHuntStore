<h1>{{title}}</h1>
<p>{{productPageText}}</p>
<!--Add a new product link -->
<a href="/products/add">Add a New Product</a>

<table class="table table-striped table-hover">
    <thead>
        <th>Name</th>
        <th>Description</th>
        <th>Quantity</th>
        <th>Category</th>
        <th>Actions</th>
        {{#each products}}
            <tr>
                <td>
                    <a href="/products/edit/{{this._id}}">
                    {{this.name}}
                    </a>
                </td>
                <td>{{this.description}}</td>
                <td>{{this.quantity}}</td>
                <td>{{this.categoryName}}</td>
                <!--Remove Button-->
                <td><a href="/products/remove/{{this.id}}" class="btn btn-danger" onclick="return remove();">Remove</a></td>
            </tr>
        {{/each}}
    </thead>
</table>